{
  "name": "@starlightcms/cli",
  "version": "0.1.3",
  "description": "The official Starlight toolkit.",
  "author": "Lucas Varela @lucas-varela",
  "bin": {
    "starlight": "./bin/run"
  },
  "homepage": "https://github.com/lucas-varela/cli",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "lucas-varela/cli",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@inquirer/prompts": "^3.0.2",
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^3.1.8",
    "@oclif/plugin-warn-if-update-available": "^2.0.46",
    "chalk": "^4.1.2",
    "got": "^11.8.3",
    "isomorphic-fetch": "^3.0.0",
    "octokit": "^3.1.0",
    "tar": "^6.1.15"
  },
  "devDependencies": {
    "@oclif/test": "^2.4.0",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.18.39",
    "@types/tar": "^6.1.5",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^8.9.0",
    "mocha": "^9",
    "oclif": "^3.10.0",
    "prettier": "3.0.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.1",
    "typescript": "^4.9.5"
  },
  "oclif": {
    "bin": "starlight",
    "dirname": "starlight",
    "commands": "./dist/commands",
    "hooks": {
      "init": "./dist/hooks/init"
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-warn-if-update-available"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 7,
      "message": "<%= config.name %> update available to version <%= chalk.greenBright(config.version) %>. You're using version <%= chalk.greenBright(latest) %>. Use <%= chalk.blueBright('npm install -g @starlightcms/cli@latest') to update. %>"
    },
    "topicSeparator": " "
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/lucas-varela/cli/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
